extends ../layout

block content
    h1= title
    p
        a.button(href='new_book.html') Create New Book
    div.filter
        span Filters:
        ul.filter__buttons
            li
                a(href='/books') All
            li
                a(href='/books/overdue') Overdue
            li
                a(href='/books/checked-out') Checked Out
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year Released
        tbody
            each book in books
                tr
                    td
                        a(href='book_detail.html')= book.title
                    td= book.author
                    td= book.genre
                    td= book.first_published
