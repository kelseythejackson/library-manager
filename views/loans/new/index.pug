extends ../../layout

block content
  h1= title
  if(errors)
    h2.errors Ooops an error occured!
    ul.errors
        each error in errors
            li=error.message
  form(action='/loans', method='post')
    p
      label(for='book_id') Book
      select#book_id(name='book_id')
        each book in books
          option(value=`${book.id}`)= book.title
      
    p
      label(for='patron_id') Patron
      select#patron_id(name='patron_id')
        each patron in patrons
          option(value=`${patron.id}`) #{patron.first_name} #{patron.last_name}
        
    p
      label(for='loaned_on') Loaned on:
      input#loaned_on(type='text', name='loaned_on' value=moment(Date.now()).format('GGGG-MM-DD'))
    p
      label(for='return_by') Return by:
      input#return_by(type='text', name='return_by' value=moment(Date.now()).add(7, 'day').format('GGGG-MM-DD'))
    p
      input(type='submit', value='Create New Loan')
